.row
  .col-lg-12
    .page-header
      %h1
        Scores
%table.table.table-striped.table-hover
  %thead
    - ["User", "Enemies killed", "Bosses", "Total Score", "Total %"].each do |attribute|
      %th
        = attribute
  %tbody
    - scores.each do |score|
      %tr
        -[:name, :enemies_killed].each do |attribute|
          %td
            = score.send attribute
        %td
          - score.bosses.each do |boss|
            = image_tag boss.image_url, size: "80x100"
        %td
          = score.total
        %td
          = score.total_percent(bosses_total)
=link_to "New Score", new_score_path, class: "btn btn-primary"


